<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="App.Controls.WorkPlace.WorkPlaceView"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:App.Controls.WorkPlace"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <vm:WorkPlaceViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="*,2*">
        <StackPanel Grid.Column="0" Margin="20">
            <TextBlock Margin="0 0 0 8" FontSize="24" LineHeight="32" TextWrapping="WrapWithOverflow" FontWeight="Bold" Text="Информация о композитном генераторе"/>
            <TextBlock Margin="0 0 0 4" FontSize="18" LineHeight="24" TextWrapping="WrapWithOverflow" Text="{Binding CompositionGen.Name, StringFormat=Имя: {0}}"/>
            <TextBlock Margin="0 0 0 4" FontSize="18" LineHeight="24" TextWrapping="WrapWithOverflow" Text="{Binding CompositionGen.N, StringFormat=Количество чисел\, необходимое для подсчета среднего арифметического: {0}}"/>
            <TextBlock Margin="0" FontSize="18" LineHeight="24" TextWrapping="WrapWithOverflow" Text="{Binding UsedAverageBehaviour, StringFormat=Поведение подсчета среднего арифметичесого при недостатке числел: {0}}"/>
            <Button Content="Добавить генератор" Command="{Binding AddGenerator}"/>
        </StackPanel>
        
        <StackPanel Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <Button
                    Command="{Binding GenaerateNext}"
                    Content="Сгенерировать новое число"
                    Width="200" />
                <TextBlock Text="Binding Last Num = " />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button
                    Command="{Binding Averga}"
                    Content="Подсчитать среднее"
                    Width="200" />
                <TextBlock Text="Binding Last Averga = " />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>