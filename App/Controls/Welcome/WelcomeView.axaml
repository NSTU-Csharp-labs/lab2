<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:welcome="using:App.Controls.Welcome"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="App.Controls.Welcome.WelcomeView">
    <Design.DataContext>
        <welcome:WelcomeViewModel />
    </Design.DataContext>
    <!-- <TextBlock Text="asdasdasd" /> -->
    <Grid>
        <StackPanel HorizontalAlignment="Left"
                    Margin="30, 120, 0, 0"
                    Width="400">
            <TextBlock Text="{StaticResource WelcomeContent}" />
            <TextBox Text="{Binding CompName, Mode = TwoWay}"
                     Watermark="Введите имя генератора" />
            <ComboBox Width="400"
                      x:Name="behaviourComboBox">
                <ComboBoxItem>ReturnAverageOfAvailableNumbers</ComboBoxItem>
                <ComboBoxItem>ThrowException</ComboBoxItem>
                <ComboBoxItem>ReturnNaN</ComboBoxItem>
            </ComboBox>
            <TextBox Text="{Binding N, Mode = TwoWay}"
                     Watermark="Введите число N" />
        </StackPanel>
        <Button Command="{Binding CreateGen}"
                HorizontalAlignment="Right"
                Margin="0, 120, 100, 0"
                Content="Создать генератор" />
    </Grid>
</UserControl>